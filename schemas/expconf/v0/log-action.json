{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://determined.ai/schemas/expconf/v0/log-action.json",
    "title": "LogAction",
    "type": ["string", "object"],
    "union": {
        "defaultMessage": "expected one of \"cancel_retries\", \"exclude_node\", or an object containing a single \"signal\" field",
        "items": [
            {
                "unionKey": "singleproperty:signal",
                "required": ["signal"],
                "properties": {
                    "signal": {
                        "type": ["string"]
                    }
                },
                "additionalProperties": false
            },
            {
                "unionKey": "never",
                "const": "exclude_node"
            },
            {
                "unionKey": "never",
                "const": "cancel_retries"
            }
        ]
    }
}
