{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://determined.ai/schemas/expconf/v0/log-policy.json",
    "title": "LogPolicy",
    "additionalProperties": false,
    "required": [
        "pattern"
    ],
    "type": "object",
    "properties": {
        "pattern": {
            "type": [
                "string"
            ]
        },
        "action": {
            "$ref": "http://determined.ai/schemas/expconf/v0/log-action-old.json"
        },
        "actions": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "$ref": "http://determined.ai/schemas/expconf/v0/log-action.json"
            },
            "default": []
        }
    },
    "checks": {
        "detected both the deprecated \"action\" field and the newer \"actions\" field": {
            "$comment": "user can't provide both action and actions",
            "oneOf": [
                {
                    "properties": {
                        "action": true
                    },
                    "additionalPropertes": false
                },
                {
                    "properties": {
                        "actions": true
                    },
                    "additionalPropertes": false
                }
            ]
        }
    }
}
